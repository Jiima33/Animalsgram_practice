<!--お気に入りボタン　[非同期通信化]-->

<!--お気に入り登録済みの時-->
<% if post_image.favorited_by?(current_user) %>
  <%= link_to post_image_favorites_path(post_image), class: "text-danger", method: :delete, remote: true do %>
    <i class="fas fa-thumbs-up"></i><%= post_image.favorites.count %>
  <% end %>

<!--お気に入り登録の時-->
<% else %>
  <%= link_to post_image_favorites_path(post_image), method: :post, remote: true do %>
    <i class="fas fa-thumbs-up"></i><%= post_image.favorites.count %>
  <% end %>
<% end %>