<% if post_image.post_comments.present? %>
  <p>コメント件数：<%= post_image.post_comments.count %></p>
  <% post_image.post_comments.each do |comment| %>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
    <% if comment.user == current_user %>
      <div class="comment-delete">
        <%= link_to "削除", post_image_post_comment_path(comment.post_image, comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <p>コメントはまだありません</p>
<% end %>
