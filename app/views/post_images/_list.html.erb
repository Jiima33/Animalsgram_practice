<!-- ユーザーの投稿一覧 -->

<% post_images.each do |post_image| %>
<div>
  <%= link_to post_image_path(post_image.id) do %>
    <%= image_tag post_image.get_image, size: "100x100" %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag post_image.user.get_profile_image(100,100) %></p>
  <p>キャプション：<%= post_image.caption %></p>
  <p>ユーザーネーム：<%= post_image.user.name %></p>
  <div id="favorite_buttons_<%= post_image.id %>">
    <%= render "favorites/favorite", post_image: post_image %>
  </div>
  <div id="comment_count">
    <%= post_image.post_comments.count %>
  </div>
</div>
<% end %>
<%= paginate post_images %>